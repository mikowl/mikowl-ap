{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": "src",
		"verbatimModuleSyntax": true,
		"paths": {
			"@assets/*": ["assets/*"],
			"@config": ["config.ts"],
			"@components/*": ["components/*"],
			"@content/*": ["content/*"],
			"@layouts/*": ["layouts/*"],
			"@pages/*": ["pages/*"],
			"@styles/*": ["styles/*"],
			"@utils/*": ["utils/*"]
		}
	}
}
